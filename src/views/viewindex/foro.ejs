<%- include ('../partials/_header')  %>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>nÂ°</th>
                        <th>Usuario</th>
                        <th>Contenido</th>
                        <th>Tipo de Contenido</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data){ %>
                        <%for(var i = 0; i < data.length; i++){ %>
                            <tr>
                                <td><%=(i+1) %></td>
                                <td><%= data[i].username %></td>
                                <td><%= data[i].content %></td>
                                <td><%= data[i].type_content %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class ="card-body">
                    <form action="/add_publicacion" method="post">
                        <div class="form-group">
                            <input type="text" name="id_usuarios" placeholder="id_usuarios" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="content" placeholder="content" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="type_content" placeholder="type_content" class="form-control">
                        </div>
                        <button type="submit" class ="btn btn-primary">Subir publicacion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('../partials/_footer')  %>